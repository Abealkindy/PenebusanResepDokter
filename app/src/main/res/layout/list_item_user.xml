<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_item_user"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/jarak10dp"
    app:cardCornerRadius="@dimen/jarak5dp"
    app:cardElevation="@dimen/jarak5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/jarak10dp">

        <TextView
            android:id="@+id/text_list_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Username : abe\nRole : Dokter" />

    </LinearLayout>
</android.support.v7.widget.CardView>