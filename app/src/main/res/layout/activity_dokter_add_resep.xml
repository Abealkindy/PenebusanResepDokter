<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:scrollbars="none">

    <android.support.v7.widget.CardView
        android:id="@+id/cardregister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/size20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/size20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/slide_title"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:text="@string/tambah_resep_text"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/size40sp" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edit_text_tanggal_resep"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size50dp"
                    android:layout_marginBottom="@dimen/size10dp"
                    android:focusable="false"
                    android:hint="@string/tanggal_resep_hint" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edit_text_keterangan_resep"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size100dp"
                    android:layout_marginBottom="@dimen/size10dp"
                    android:gravity="top|start"
                    android:hint="@string/keterangan_hint"
                    android:importantForAutofill="no"
                    android:inputType="textMultiLine"
                    android:maxLines="3"
                    android:scrollbars="vertical"
                    tools:targetApi="o" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/button_add_resep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size10dp"
                android:background="@drawable/ground_button_place"
                android:text="@string/tambah_text"
                android:textColor="@android:color/white"
                android:textIsSelectable="true" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>