<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/size10dp"
    android:scrollbars="none"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.adminpages.MainAdminActivity"
    tools:showIn="@layout/activity_main_admin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size20dp"
        android:layout_marginBottom="@dimen/size20dp"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size20dp">

            <android.support.v7.widget.CardView
                android:id="@+id/card_pendaftaran"
                android:layout_width="@dimen/size125dp"
                android:layout_height="@dimen/size125dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/size20dp"
                android:backgroundTint="@color/colorPrimary"
                app:cardCornerRadius="@dimen/size5dp">

                <LinearLayout
                    android:layout_width="@dimen/size125dp"
                    android:layout_height="@dimen/size125dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/registration"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size5dp"
                        android:text="@string/pendaftaran_menu_text"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_pembayaran"
                android:layout_width="@dimen/size125dp"
                android:layout_height="@dimen/size125dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/size20dp"
                android:backgroundTint="@color/colorPrimary"
                app:cardCornerRadius="@dimen/size5dp">

                <LinearLayout
                    android:layout_width="@dimen/size125dp"
                    android:layout_height="@dimen/size125dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/cashier"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size5dp"
                        android:text="@string/pembayaran_menu_text"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size20dp">

            <android.support.v7.widget.CardView
                android:id="@+id/card_resep"
                android:layout_width="@dimen/size125dp"
                android:layout_height="@dimen/size125dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/size20dp"
                android:backgroundTint="@color/colorPrimary"
                app:cardCornerRadius="@dimen/size5dp">

                <LinearLayout
                    android:layout_width="@dimen/size125dp"
                    android:layout_height="@dimen/size125dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/prescription"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size5dp"
                        android:text="@string/resep_menu_text"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_detail"
                android:layout_width="@dimen/size125dp"
                android:layout_height="@dimen/size125dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/size20dp"
                android:backgroundTint="@color/colorPrimary"
                app:cardCornerRadius="@dimen/size5dp">

                <LinearLayout
                    android:layout_width="@dimen/size125dp"
                    android:layout_height="@dimen/size125dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/detail"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size5dp"
                        android:text="@string/detail_menu_text"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size20dp">

            <android.support.v7.widget.CardView
                android:id="@+id/card_obat"
                android:layout_width="@dimen/size125dp"
                android:layout_height="@dimen/size125dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/size20dp"
                android:backgroundTint="@color/colorPrimary"
                app:cardCornerRadius="@dimen/size5dp">

                <LinearLayout
                    android:layout_width="@dimen/size125dp"
                    android:layout_height="@dimen/size125dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/drugs"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size5dp"
                        android:text="@string/obat_menu_text"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_poliklinik"
                android:layout_width="@dimen/size125dp"
                android:layout_height="@dimen/size125dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/size20dp"
                android:backgroundTint="@color/colorPrimary"
                app:cardCornerRadius="@dimen/size5dp">

                <LinearLayout
                    android:layout_width="@dimen/size125dp"
                    android:layout_height="@dimen/size125dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/poliklinik"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size5dp"
                        android:text="@string/poliklinik_menu_text"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size20dp">

            <android.support.v7.widget.CardView
                android:id="@+id/card_pasien"
                android:layout_width="@dimen/size125dp"
                android:layout_height="@dimen/size125dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/size20dp"
                android:backgroundTint="@color/colorPrimary"
                app:cardCornerRadius="@dimen/size5dp">

                <LinearLayout
                    android:layout_width="@dimen/size125dp"
                    android:layout_height="@dimen/size125dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/patient"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size5dp"
                        android:text="@string/pasien_menu_text"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_doctor"
                android:layout_width="@dimen/size125dp"
                android:layout_height="@dimen/size125dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/size20dp"
                android:backgroundTint="@color/colorPrimary"
                app:cardCornerRadius="@dimen/size5dp">

                <LinearLayout
                    android:layout_width="@dimen/size125dp"
                    android:layout_height="@dimen/size125dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/maledoctor"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size5dp"
                        android:text="@string/dokter_menu_text"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size20dp">


            <android.support.v7.widget.CardView
                android:id="@+id/card_user"
                android:layout_width="@dimen/size125dp"
                android:layout_height="@dimen/size125dp"
                android:layout_marginStart="@dimen/size20dp"
                android:layout_marginEnd="@dimen/size20dp"
                android:backgroundTint="@color/colorPrimary"
                app:cardCornerRadius="@dimen/size5dp">

                <LinearLayout
                    android:layout_width="@dimen/size125dp"
                    android:layout_height="@dimen/size125dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/user"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size5dp"
                        android:text="@string/user_text"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_print"
                android:layout_width="@dimen/size125dp"
                android:layout_height="@dimen/size125dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/size20dp"
                android:backgroundTint="@color/colorPrimary"
                app:cardCornerRadius="@dimen/size5dp">

                <LinearLayout
                    android:layout_width="@dimen/size125dp"
                    android:layout_height="@dimen/size125dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/printer"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size5dp"
                        android:text="@string/print_text"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>